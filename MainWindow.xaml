<Window x:Class="CompanyPartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyPartApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/img/Мастер пол.ico">
    <Grid>
        <ListView Name="listParts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,300,0" Background="#FFF4E8D3">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Добавить партнера" HorizontalAlignment="Left" Margin="563,342,0,0" VerticalAlignment="Top" Height="40" Width="144" Click="Button_Click" Background="#FF67BA80"/>
        <Button Content="История" HorizontalAlignment="Left" Margin="563,152,0,0" VerticalAlignment="Top" Height="40" Width="144" Click="Button_Click_1" Background="#FF67BA80"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="648,10,0,0" VerticalAlignment="Top" Width="100" Source="/img/Мастер пол.png"/>
        <Button Content="Расчет" HorizontalAlignment="Left" Margin="563,247,0,0" VerticalAlignment="Top" Height="40" Width="144" Click="Button_Click_2" Background="#FF67BA80"/>

    </Grid>
</Window>
